<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Alabanza.MainPage">

    <Grid RowDefinitions="auto,auto,auto,auto">
         <Frame Grid.Row ="0" BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Alabanza" HorizontalTextAlignment="Center" TextColor="White" FontSize="20"/>
        </Frame>
        <Label x:Name="evidencia"></Label>
        <Button Grid.Row="1" Text="Repertorio" Clicked="abrirRepertorio" VerticalOptions="Center"></Button>
        <Button Grid.Row="2" Text="Listas" Clicked="AbrirListas" VerticalOptions="Center"></Button>
        <Button Grid.Row="3" Text="Importar" Clicked="abrirImportar" VerticalOptions="Center"></Button>
    </Grid>

</ContentPage>
